            android:screenOrientation="portrait" />

        <activity android:name=".view.ui.ImageBucket.ImageChooseActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.ui.ImageBucket.ImageZoomActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.ui.ImageBucket.ImageBucketChooseActivity"
            android:screenOrientation="portrait" />
