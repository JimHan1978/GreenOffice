<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lly_main"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="美好的一天，从此刻开始！"
            android:textColor="@color/zao_time"
            android:textSize="27sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="40dp"
            android:paddingRight="65dp">

            <ImageView
                android:id="@+id/iv_shang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_shang" />

            <TextView
                android:id="@+id/zao_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_shang"
                android:gravity="center"
                android:text="打卡时间" />

            <TextView
                android:id="@+id/tv_zao_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/zao_time"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_shang"
                android:gravity="center"
                android:text=""
                android:textColor="@color/zao_time"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zao_state"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:text="打卡状态" />

            <TextView
                android:id="@+id/tv_zao_state"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/zao_state"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text=""
                android:textColor="#fff" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="40dp"
            android:paddingRight="65dp">

            <ImageView
                android:id="@+id/iv_xia"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_xia" />

            <TextView
                android:id="@+id/wan_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_xia"
                android:gravity="center"
                android:text="打卡时间" />

            <TextView
                android:id="@+id/tv_wan_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/wan_time"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_xia"
                android:gravity="center"
                android:text=""
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wan_state"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:text="打卡状态" />

            <TextView
                android:id="@+id/tv_wan_state"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/wan_state"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#fff" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/iv_daka"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rly_shake"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_shake"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/animation_shake" />

        <TextView
            android:id="@+id/tv_wifi"
            android:layout_width="wrap_content"
            android:minWidth="180dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/iv_shake"
            android:gravity="center"
            android:textSize="16sp"
            android:text="摇一摇抽取今日大奖"
            android:textColor="@color/punchcard_blue" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:minWidth="160dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_shake"
            android:layout_below="@+id/tv_wifi"
            android:gravity="center"
            android:textSize="14sp"
            android:text="剩余抽奖次数 1 "
            android:textColor="@color/punchcard_blue" />
    </RelativeLayout>

</LinearLayout>