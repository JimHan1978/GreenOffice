<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackgroundGray">

    <!-- TODO: Update blank fragment layout -->
    <include
        layout="@layout/layout_top_bar"
        android:id="@+id/layout_top_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_background_block"
            android:orientation="vertical"
            android:padding="@dimen/dp_1">
            <include layout="@layout/layout_setting_item"
                android:id="@+id/layout_account"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_background_block"
            android:divider="@drawable/shape_bottom_line_10"
            android:showDividers="middle"
            android:orientation="vertical"
            android:padding="@dimen/dp_1">
            <include layout="@layout/layout_setting_item"
                android:id="@+id/layout_msg"/>
            <include layout="@layout/layout_setting_item"
                android:id="@+id/layout_general"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_background_block"
            android:divider="@drawable/shape_bottom_line_10"
            android:showDividers="middle"
            android:orientation="vertical"
            android:padding="@dimen/dp_1">
            <include layout="@layout/layout_setting_item" android:id="@+id/layout_version"/>
            <include layout="@layout/layout_setting_item" android:id="@+id/layout_about"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/logout"
        android:textColor="@color/red"
        android:padding="@dimen/dp_12"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/background_btn_selector"/>
</LinearLayout>