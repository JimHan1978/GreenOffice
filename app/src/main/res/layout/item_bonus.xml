<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="20sp" />

        <com.allen.library.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/tv_ranking"
            android:src="@drawable/ic_avatar_default" />

        <com.allen.library.CircleImageView
            android:id="@+id/iv_crown"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/tv_ranking"
            android:layout_marginLeft="-1dp"
            android:visibility="gone"
            android:src="@drawable/shape_ring_gold" />

        <ImageView
            android:id="@+id/iv_crown_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="@dimen/dp_1"
            android:visibility="gone"
            android:layout_marginLeft="-26dp"
            android:layout_toRightOf="@+id/iv_head"
            android:src="@drawable/ic_crown_gold" />


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_amount_money"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/dk_dp_20"
            android:layout_alignTop="@+id/tv_message_name"
            android:layout_alignParentRight="true"
            android:text=""
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="70dp"
        android:background="@color/lightsteelblue"
        />

</LinearLayout>