<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <include layout="@layout/base_top_bar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="活动类型"
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <TextView
                android:id="@+id/space4"
                android:layout_toRightOf="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="       "
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <Spinner
                android:id="@+id/type_spinner"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/space4"
                android:textSize="@dimen/top_title_textSize"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/activity_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="活动地点"
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <TextView
                android:id="@+id/space5"
                android:layout_toRightOf="@+id/activity_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="       "
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <Spinner
                android:id="@+id/location_spinner"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/space5"
                android:textSize="@dimen/top_title_textSize"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="集合地点"
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <TextView
                android:id="@+id/space1"
                android:layout_toRightOf="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="       "
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <EditText
                android:id="@+id/location_text"
                android:hint="请输入集合地点"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/space1"
                android:textSize="@dimen/top_title_textSize"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/lottery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="红包金额"
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <TextView
                android:id="@+id/space2"
                android:layout_toRightOf="@+id/lottery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="       "
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <EditText
                android:id="@+id/lottery_text"
                android:text="50"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/space2"
                android:textSize="@dimen/top_title_textSize"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_time"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="开始时间"
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <TextView
                android:id="@+id/space3"
                android:layout_toRightOf="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/top_title_textSize"
                android:text="       "
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"/>
            <TextView
                android:id="@+id/start_time_text"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/space3"
                android:textSize="@dimen/top_title_textSize"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="注：红包金额默认为50元，如需更改，请输入相应金额"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/green"
                android:text="提                                                   交"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>